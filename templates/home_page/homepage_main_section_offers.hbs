<section class="homepage_section_offers col-lg-4 col-md-6 col-sm-6 col-xs-12">

    <div class="section_header">
        <a href="#/contact">
            {{#if offers_image_source}}
                <div class="section_image">
                    <img alt="No image preview" src={{offers_image_source}}>
                </div>
            {{/if}}
            <h1>Нашите услуги</h1>
        </a>
    </div>

    <div class="section_body">
        {{#each offers}}
            <div class="header_offer_1">
                <h4>{{header}}</h4>
            </div>
            <div class="body_offer_1">
                <p>
                    <a href="#/contact">
                        {{body}}
                    </a>
                </p>
            </div>
        {{/each}}

    </div>
    <hr>
</section>