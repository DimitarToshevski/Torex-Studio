<section class="contactpage_section_offers">
    <div class="section_header">
        <h1>Студио Торекс Ви предлага:</h1>
        <hr>
    </div>
    <div class="section_body">
        {{#each offers}}
            <div id="{{id}}" class="offer col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="offer_header">
                    <img src="{{img}}" alt="No image preview">
                    <h4>{{header}}</h4>
                </div>
                <div class="offer_body">
                    <p>{{body}}</p>
                </div>
            </div>
        {{/each}}
    </div>
</section>